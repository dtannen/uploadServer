<h1>Listing requests</h1>

<table>
  <tr>
    <th>Request IP</th>
    <th>Size (in bytes)</th>
    <th>Request Type</th>
    <th>Actions</th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.request_ip %></td>
    <td><%= request.content_length %></td>
    <td><%= request.request_type %></td>
    <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

