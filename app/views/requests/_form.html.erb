<%= form_for @request, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :request_ip, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :request_ip, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :content_length, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :content_length, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :raw_post, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :raw_post, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :request_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :request_type, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                requests_path, :class => 'btn' %>
  </div>
<% end %>
