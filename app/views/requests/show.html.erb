<%- model_class = Request -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:request_ip) %>:</strong></dt>
  <dd><%= @request.request_ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @request.content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content_length) %>:</strong></dt>
  <dd><%= @request.content_length %></dd>
  <dt><strong><%= model_class.human_attribute_name(:raw_post) %>:</strong></dt>
  <dd><%= @request.raw_post %></dd>
  <dt><strong><%= model_class.human_attribute_name(:request_type) %>:</strong></dt>
  <dd><%= @request.request_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              requests_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_request_path(@request), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              request_path(@request),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
